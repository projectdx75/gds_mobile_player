{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FlashPlex",
  "version": "0.2.0",
  "identifier": "com.flashplex.player",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "FlashPlex",
        "width": 1280,
        "height": 720,
        "backgroundColor": "#050505",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],

    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
